generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Elves {
  id        Int     @id @default(autoincrement())
  name      String
  age       String
  address   String
  height    String
  mail      String
  isDeleted Boolean @default(false)
}

model Addresses {
  id            Int         @id @default(autoincrement())
  lat           String
  lng           String
  display_name  String
  search_date   DateTime @default(now())
  searches      Searches[]
  childrens     Childrens[]
}

model Searches {
  id          Int      @id @default(autoincrement())
  searched_in DateTime @default(now())
  address     Addresses @relation(fields: [address_id], references: [id])
  address_id  Int
}

model Childrens {
  id         Int      @id @default(autoincrement())
  name       String
  age        Int
  conduct    String
  address    Addresses @relation(fields: [address_id], references: [id])
  address_id Int
  gift       Boolean
  card       Card[]
}

model Card {
  id          Int       @id @default(autoincrement())
  content     String
  create_at   DateTime  @default(now())
  children    Childrens @relation(fields: [children_id], references: [id])
  children_id Int
  isRead      Boolean   @default(false)
}

model Range {
  id       Int        @id @default(autoincrement())
  range    String
  reindeer Reindeer[]
}

model Reindeer {
  id                 Int    @id @default(autoincrement())
  name               String
  description_of_use String
  range              Range  @relation(fields: [range_id], references: [id])
  range_id           Int
}
