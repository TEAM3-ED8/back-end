generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Elves {
  id        Int     @id @default(autoincrement())
  name      String
  age       String
  address   String
  height    String
  email     String
  isDeleted Boolean @default(false)
}

model Addresses {
  id           Int      @id @default(autoincrement())
  lat          String
  lng          String
  display_name String
  search_date  DateTime @default(now())
}

model Childrens {
  id            Int     @id @default(autoincrement())
  name          String
  behavior      String  @default("Kind")
  levelBehavior String  @default("Good")
  gift          Boolean
  cards         Card[]
}

model Card {
  id          Int       @id @default(autoincrement())
  content     String
  create_at   DateTime  @default(now())
  children_id Int
  isRead      Boolean   @default(false)
  children    Childrens @relation(fields: [children_id], references: [id])
}

model Range {
  id       Int        @id @default(autoincrement())
  range    String
  // reindeer Reindeer[]
}

model Reindeers {
  id Int @id @default(autoincrement())
  name String
  type String
  skills Skills[]
}

model Skills {
  id Int @id @default(autoincrement())
  skill String
  value Int
  reindeer Reindeers @relation(fields: [reindeerId], references: [id])
  reindeerId Int
}

model ReindeerOrganizations {
  id Int @id @default(autoincrement())
  name String
  isSelected Boolean @default(false)
  isAvailable Boolean @default(false)
  positions Positions[]
}

model Positions {
  id Int @id @default(autoincrement())
  position Int

  reindeerId Int?
  
  reindeerOrganizations ReindeerOrganizations @relation(fields: [organizationId], references: [id])
  organizationId Int
}


model Members {
  id       Int    @id @default(autoincrement())
  name     String
  image    String
  role     String
  message  String
  github   String
  linkedin String
}
